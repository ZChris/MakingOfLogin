<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".MainActivity" >

	<ImageView 
	    android:id="@+id/makingOfLogoId"
	    android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp"
		android:layout_marginLeft="35dp"
		android:layout_marginRight="35dp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitCenter"
        android:src="@drawable/tx_logo"
	    />
	<ImageView 
	    android:id="@+id/loginImageUpId"
	    android:layout_below="@id/makingOfLogoId"
	    android:layout_marginTop="50dp"
	    android:layout_marginLeft="40dip"
		android:layout_marginRight="40dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
        android:src="@drawable/login_image_up"
        />
	<EditText
	    android:id="@+id/loginTextInputUpId"
	   	android:layout_below="@id/loginImageUpId"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
	    android:gravity="center_horizontal"
	    android:cursorVisible="false"
		android:hint="Email"
		android:maxLength="30"
		android:singleLine="true" 
		android:typeface="monospace"
		android:textColorHint="@color/login_texthint"
		android:textColor="@color/login_text"
		android:background="@drawable/login_textinput_up"
	    />
	<ImageView 
	    android:id="@+id/loginImageMidId"
	    android:layout_below="@id/loginTextInputUpId"
	    android:layout_marginLeft="40dip"
		android:layout_marginRight="40dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
		android:src="@drawable/login_image_mid"
	    />	
	<EditText  
	    android:id="@+id/loginTextInputDownId"
	    android:layout_below="@id/loginImageMidId"
	    android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:gravity="center_horizontal"
	    android:cursorVisible="false"
	    android:scaleType="fitXY"
	    android:hint="Password"
	    android:maxLength="30"
	    android:typeface="monospace"
	    android:textColorHint="@color/login_texthint"
	    android:textColor="@color/login_text"
        android:background="@drawable/login_textinput_down"
	    />
	
	 <Button
	    android:id="@+id/loginButtonId"
	    android:layout_below="@id/loginTextInputDownId"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="25dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitCenter"
        android:background="@drawable/login_button"
	   />
</RelativeLayout>
